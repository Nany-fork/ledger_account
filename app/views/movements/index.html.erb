<%= render "navbar" %>
<p style="color: green"><%= notice %></p>
<div class="content_page">
  <h1>Movements</h1>
    <div id="movements">
      <table class="pure-table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Date</th>
            <th>Amont</th>
            <th>Category</th>
            <th>Action</th>
          </tr>
        </thead>
        <% @movements.each do |movement| %>
          <%= render movement %>
        <% end %>
      </table>
    </div>
    <br/>
    <div class="pure-g">
      <div class="pure-u-1-3"><h3>Total: <%= @account_balance %></h3></div>
      <div class="pure-u-1-3"><p></p></div>
      <div class="pure-u-1-3"><%= link_to "New movement", new_movement_path, class: "pure-button pure-button-primary" %></div>
    </div>
</div>
